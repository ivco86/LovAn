# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Gallery API URL (default: http://localhost:5000)
GALLERY_API_URL=http://localhost:5000

# Photos directory (default: photos)
PHOTOS_DIR=photos

# Auto-analyze photos with AI (true/false, default: true)
AUTO_ANALYZE=true

# AI analysis style (classic/detailed/tags/custom, default: classic)
AI_STYLE=classic

# Allowed chat IDs (comma-separated, empty = allow all)
# Get chat ID by adding bot to group and checking logs
# Example: ALLOWED_CHATS=-1001234567890,-1009876543210
ALLOWED_CHATS=
